<h1>Edititng</h1>
<%= form_for @task do |f| %>
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <p>Please set a title</p>
  <%= f.text_field :title %>
  <p>Please write a description</p>
  <%= f.text_field :details %> <br /><br>
  <%= f.label "Task done?" %>
  <%= f.check_box :completed %>
  <br><br><%= f.submit %>
<% end %>
